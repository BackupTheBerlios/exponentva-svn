{config_load file="`$smarty.const.BASE`subsystems/lang/`$smarty.const.LANG`/modules/modules.i18n" scope="local"}
{config_load file="`$smarty.const.BASE`subsystems/lang/`$smarty.const.LANG`/modules/`$__loc->mod`.i18n" scope="local"}
{config_load file="`$smarty.const.BASE`subsystems/lang/`$smarty.const.LANG`/modules/`$__loc->mod`.`$__view`.i18n" scope="local"}
<div class="moduletitle">{#i18n_formtitle#}</div>
<table cellspacing="0" cellpadding="0" border="0" width="100%">
{foreach from=$mods key=name item=status}
<tr class="row {cycle values=odd_row,even_row}">
	<td>{$name}</td>
	<td>{if $status == 1}<span style="color: green">{#i18n_operation_success#}</span>{else}<span style="color: red; font-weight: bold">{#i18n_operation_error#}</span>{/if}</td>
</tr>
{/foreach}
</table>